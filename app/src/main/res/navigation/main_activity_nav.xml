<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav"
    app:startDestination="@id/girisFragment">

    <fragment
        android:id="@+id/anasayfaFragment"
        android:name="com.example.kitapuygulamasiornek.ui.fragments.AnasayfaFragment"
        android:label="fragment_anasayfa"
        tools:layout="@layout/fragment_anasayfa" >
        <action
            android:id="@+id/gecisDetay"
            app:destination="@id/detayFragment" />
    </fragment>
    <fragment
        android:id="@+id/detayFragment"
        android:name="com.example.kitapuygulamasiornek.ui.fragments.DetayFragment"
        android:label="fragment_detay"
        tools:layout="@layout/fragment_detay" >
        <argument
            android:name="gelenKitaplar"
            app:argType="com.example.kitapuygulamasiornek.data.Kitaplar" />
    </fragment>
    <fragment
        android:id="@+id/girisFragment"
        android:name="com.example.kitapuygulamasiornek.ui.fragments.GirisFragment"
        android:label="GirisFragment" >
        <action
            android:id="@+id/gecisAnasayfa"
            app:destination="@id/anasayfaFragment" />
    </fragment>
</navigation>